<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AutoResWinUI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AutoResCore.ViewModels"
    xmlns:m="using:AutoResCore.Models"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:MainViewModel x:Name="ViewModel"/>
    </Page.DataContext>
    
    <StackPanel Margin="4 0 4 0">
        <Expander
         IsExpanded="True"
         ExpandDirection="Down"
         HorizontalAlignment="Stretch"
         VerticalAlignment="Top"
         Header="Displays"
    >
            <Expander.Content>
                <ComboBox 
                    HorizontalAlignment="Stretch" 
                    ItemsSource="{x:Bind ViewModel.DisplayMonitors}"
                    SelectedItem="{x:Bind ViewModel.SelectedDisplay, Mode=TwoWay}"
                    DisplayMemberPath="DisplayFullName">
                </ComboBox>
            </Expander.Content>
        </Expander>
    </StackPanel>
</Page>
