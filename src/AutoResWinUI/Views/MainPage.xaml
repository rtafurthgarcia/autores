<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AutoResWinUI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="using:AutoResCore.Mvvm"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Stretch" Margin="4 0 4 0" VerticalAlignment="Center">
        <Expander
         IsExpanded="False"
         ExpandDirection="Down"
         VerticalAlignment="Top"
         Header="Apps to monitor"
    >
            <Expander.Content>
                <ComboBox HorizontalAlignment="Stretch" ItemsSource="{Binding DisplayMonitors}">

                </ComboBox>
            </Expander.Content>
        </Expander>
    </StackPanel>
</Page>
